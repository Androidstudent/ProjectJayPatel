<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    android:id="@+id/addBusinessLinearLayout"
    android:paddingTop="10dp">

    <EditText
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:id="@+id/businessNameText"
        android:textSize="26dp"
        android:layout_weight="0.04"
        android:layout_gravity="center_horizontal"
        android:hint="Business Name" />

    <EditText
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:id="@+id/businessCategoryText"
        android:textSize="26dp"
        android:layout_weight="0.04"
        android:layout_gravity="center_horizontal"
        android:hint="Business Category" />

    <EditText
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:id="@+id/contactText"
        android:textSize="26dp"
        android:layout_weight="0.04"
        android:layout_gravity="center_horizontal"
        android:hint="Contact Person Name" />

    <EditText
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:id="@+id/contactNoText"
        android:textSize="26dp"
        android:layout_weight="0.04"
        android:layout_gravity="center_horizontal"
        android:hint="Contact Number" />

    <EditText
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:id="@+id/contactEmailText"
        android:textSize="26dp"
        android:layout_gravity="center_horizontal"
        android:hint="Contact Email" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Details"
        android:id="@+id/addDetailsText"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:textSize="26dp" />

</LinearLayout>